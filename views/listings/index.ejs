<%layout("/layouts/boilerplate")%>
<body>
    
    <h3>All Listing</h3>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <%for(let listing of allListings){%>
            <a class="listing-link"href="/listings/<%=listing._id%>">
                <div class="card col listing-card" >
                    <img src="<%=listing.image%>" class="card-img-top" style="height: 20rem" alt="listing_image">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                      <p class="card-text"><b><%=listing.title%></b> <br> &#2547; <%=listing.price.toLocaleString("en-BN")%></p>
                      
                    </div>
                </div>
            </a>
            <%}%>
    </div>
    
    
    <!-- <form method="GET" action="listings/new">
        <button>Create new Listing</button>
    </form> -->
</body>

