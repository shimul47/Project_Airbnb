<%layout("/layouts/boilerplate")%>
<div class="row mt-3">
    <div class="col-8 offset-3">
        <h3><b>Listing Details :</b></h3>
    </div>
    <div class="card col-6 offset-3 show-card">
        <img src="<%=listing.image%>" class="card-img-top show-img" alt="listing_image">
        <div class="card-body">
          <p class="card-text"><b><%=listing.title%></b><br>
            <%=listing.description%> <br>
            &#2547; <%=listing.price.toLocaleString("en-BN")%> <br>
            <%=listing.location%> <br>
            <%=listing.country%>
          </p>
        </div>
      </div>
      <br>
      <div class="btns">
        <a class="btn btn-info col-1 offset-3 "href="/listings/<%=listing._id%>/edit">Edit</a></button>
   
        <form method="POST"action="/listings/<%=listing._id%>?_method=DELETE">
            <button class="btn btn-danger offset-5">Delete</button>
        </form>
      </div>
    
</div>

