<%layout("/layouts/boilerplate")%>
<div class="row">
    <div class="col-8 offset-2">
        <br>
    <h2>Create a new Listing :</h2>
    <form method="POST"action="/listings" novalidate class="needs-validation">
        <div class="mb-3">
            <label for="title" class="form-label">Title :</label>
            <input class="form-control"type="text"name="listing[title]"placeholder="Enter your title." required>
            <div class="valid-feedback">
                Looks good!
              </div> 
        </div>
        
        <div class="mb-3">
            <label for="description" class="form-label">Description :</label>
            <textarea name="listing[description]"class="form-control"></textarea>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Image :</label>
            <input type="text"name="listing[image]" class="form-control"placeholder="Enter your image url."required>
            
        </div>
        <div class="mb-3">
            <label for="number" class="form-label">Price :</label>
            <input type="number"name="listing[price]" class="form-control" required="Enter your price.">
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="location" class="form-label">Location :</label>
                <input type="text"name="listing[location]" class="form-control"placeholder="Enter your location.">
            </div>
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Country :</label> 
                <input type="text"name="listing[country]" class="form-control"placeholder="Enter your country.">
            </div>
        </div>
        <br>
        <button class="btn btn-dark">Add</button>
        <br><br>
    </form>
</div>
</div>
