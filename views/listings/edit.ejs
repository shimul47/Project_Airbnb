<%layout("/layouts/boilerplate")%>
<div class="row mt-3">
    <div class="col-8 offset-2">
    <h2>Edit</h2>

    <form method="POST"action="/listings/<%=listing._id%>?_method=PUT" novalidate class="needs-validation"enctype="multipart/form-data">
        <div>
            <label class="form-label"for="title" class="form-label">Title :</label>
            <input required type="text"name="listing[title]"class="form-control" value="<%=listing.title%>">
        </div>
        <div>
            <label class="form-label"for="description" class="form-label">Description :</label>
            <textarea required class="form-control" name="listing[description]"required><%=listing.description%></textarea>
        </div>
        <!-- <div class="mb-3">
            original listing image <br>
            <img src="<%=originalImageUrl%>"/>
        </div> -->
        <div class="mb-3">
            <label class="form-label"for="image" class="form-label">Image :</label>
            <input required class="form-control"type="file"name="listing[image]">
        </div>

        <div>
            <label class="form-label"for="number" class="form-label">Price :</label>
            <input required class="form-control"type="number"name="listing[price]"value="<%=listing.price%>">
        </div>
        <div>
            <label class="form-label"for="location" class="form-label">Location :</label>
            <input required class="form-control"type="text"name="listing[location]"value="<%=listing.location%>">
        </div>
        <div>
            <label class="form-label"for="country" class="form-label">Country :</label>
            <input required class="form-control"type="text"name="listing[country]"value="<%=listing.country%>">
        </div>
        
        <button class="btn btn-dark mt-3">Confirm Edit</button>
        
    </form>
    <br>
</div>
</div>

